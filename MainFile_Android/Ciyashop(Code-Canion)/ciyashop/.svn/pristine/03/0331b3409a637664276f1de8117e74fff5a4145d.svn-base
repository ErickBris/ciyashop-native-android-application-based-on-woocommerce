<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/value_5"
        android:layout_marginRight="@dimen/value_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/value_3"
            android:layout_weight="0.99"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/value_5"
                android:layout_marginLeft="@dimen/value_5"
                android:layout_marginTop="@dimen/value_5"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <com.potenza.ciyashop_cloths.customview.textview.TextViewRegular
                    android:id="@+id/tvName"
                    style="@style/txt_gray_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cleveland Under Armour" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_5"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <com.potenza.ciyashop_cloths.customview.textview.TextViewRegular
                        android:id="@+id/tvPrice"
                        style="@style/txt_color_primary_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="$59.00" />

                    <com.potenza.ciyashop_cloths.customview.textview.TextViewRegular
                        android:id="@+id/tvPrice1"
                        style="@style/txt_color_primary_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/value_3"
                        android:gravity="center"
                        android:text="" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.potenza.ciyashop_cloths.customview.textview.TextViewLight
                    style="@style/txt_color_primary_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/value_5"
                    android:gravity="bottom"
                    android:text="@string/view_detail" />
            </LinearLayout>


        </LinearLayout>

        <com.potenza.ciyashop_cloths.customview.textview.TextViewRegular
            android:id="@+id/tvDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_0.5"
            android:background="@color/gray_light" />
    </LinearLayout>

</LinearLayout>
